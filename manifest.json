{
	"name": "Tab Revolution",
	"short_name": "TR",
	"description": "Tab Revolution allows you to have WORKING tabs in Chrome fullscreen mode!",
	"version": "0.8",
	"author": "Los Admins",
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"128": "icons/128.png"
	},
	
	"background": {
		"persistent": false,
		"scripts": ["jquery-3.0.0.js", "back.js"]
	},

	"content_scripts": [
		{
			"persistent": false,
			"js": ["jquery-3.0.0.js", "jquery-ui.js", "main.js", "style.css"],
			"matches": ["*://*/*"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources":[
		"style.css",
		"assets/internet.png",
		"assets/back.png",
		"assets/forward.png",
		"assets/reload.png",
		"assets/close.png",
		"assets/sound.png",
		"assets/no_sound.png",
		"assets/loading.gif",
		"assets/add.png"
	],

	"permissions": [
		"http://*/*", "https://*/*", "tabs", "background"
	],
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"minimum_chrome_version": "40",
	"manifest_version": 2
}
